
@import "/assets/css/plugin.wxss";

.container {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
}

.bg {
        width: 100vw;
        height: 60vh;
        display: flex;
        flex-direction: column;
        align-items: center;
}

.bgTitle {
        font-size: 96rpx;
        height: 504rpx;
        display: flex;
        justify-content: center;
        align-items: center;
        color: rgba(0, 0, 0, 0.4);
}

.bluetooth {
        margin-top: 100rpx;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 444rpx;
        height: 444rpx;
        border-radius: 50%;
}

.bluetoothImg {
        width: 100rpx;
        height: 172rpx;
}

.bluetoothConnecting {
        width: 100%;
        height: 100%;
}

.bluetoothText {
        margin-top: 54rpx;
        font-size: 32rpx;
        color: #464646;
}

.connectingText {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: absolute;
}

.connectingTitle {
        font-size: 64rpx;
}

.connectingDecs {
        font-size: 28rpx;
}

.main {
        display: flex;
        flex-direction: column;
        align-items: center;
}

.light {
        width: 100vw;
        display: flex;
        justify-content: space-between;
        padding: 0 142rpx;
        box-sizing: border-box;
}

.margin {
        margin-bottom: 16rpx;
}

.connecting {
        background-color: #ffffff;
        border: 2rpx solid #979797;
}

.unconnecting {
        background-color: #ebebeb;
        border: none;
}

.footer {
        align-self: flex-end;
}

.bluetoothBox {
        margin-top: 76rpx;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
}

.netStatus {
        display: inline-block;
        width: 100%;
        text-align: center;
        font-size: 14px;
        margin-top: 20rpx;
}
