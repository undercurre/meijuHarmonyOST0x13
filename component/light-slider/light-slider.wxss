/* plugin/T0x13/component/light-slider/light-slider.wxss */
.container {
    margin-top: 48rpx;
    border-radius: 100rpx;
    display: flex;
    flex-direction: column;
}
.sliderBox {
    height: 492rpx;
    display: flex;
    justify-content: center;
}
.text {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.title {
    font-size: 28rpx;
    margin-top: 34rpx;
}
.percentage {
    margin-top: 26rpx;
    margin-bottom: 52rpx;
    font-size: 48rpx;
    font-weight: 500;
}
.box {
    width: 200rpx;
    height: 492rpx;
    border-radius: 100rpx;
    overflow: hidden;
}
.inner {
    width: 200rpx;
    background-color: #E7E7E7;
    position: relative;
}

.line {
    width: 84rpx;
    height: 8rpx;
    background-color: #FFFFFF;
    border-radius: 4rpx;
    position: absolute;
    bottom: -4rpx;
    left: 58rpx;
}
.custom-button {
    width: 200rpx;
    height: 160rpx;
    background-color: transparent;
    display: flex;
    justify-content: center;
    align-items: center;
}
.show-button {
    width: 84rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background-color: #FFFFFF;
}