/* plugin/T0x13/component/scene-list/scene-list.wxss */
.container {
    width: 686rpx;
    height: 304rpx;
    padding: 24rpx 32rpx;
    box-sizing: border-box;
    border-radius: 16rpx;
    background-color: #ffffff;
}
.title {
    display: inline-block;
    font-size: 28rpx;
    font-weight: 400;
    margin-bottom: 54rpx;
}

.list {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-bottom: 22rpx;
}
.box {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.image {
    width: 96rpx;
    height: 96rpx;
    background-color: #E7E7E7;
    border-radius: 50%;
    margin-bottom: 24rpx;
}
.active {
    width: 96rpx;
    height: 96rpx;
    background-color: #267AFF;
    border-radius: 50%;
    margin-bottom: 24rpx;
}
.box text {
    font-size: 24rpx;
}