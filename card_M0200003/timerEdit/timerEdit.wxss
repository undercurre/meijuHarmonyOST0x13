.container {
  width: 750rpx;
  min-height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-image: linear-gradient(180deg, rgba(255,106,76,0.12) 0%, rgba(255,107,77,0.00) 79%);
}
.bottom-block{
  height: 208rpx;
  width: 750rpx;
  background-color:#FFFFFF;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: flex-start;
  position: fixed;
  left: 0;
  bottom: 0;
  padding-top: 18rpx;
}
.time-block {
  width: 686rpx;
  height: 440rpx;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  margin-left: 32rpx;
  margin-top: 24rpx;
  display: flex;
  position: relative;
}
.time-unit{
  opacity: 0.4;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  line-height: 29rpx;
  font-weight: 400;
  position: absolute;
  top: 206rpx;
}
.set-block {
  width: 686rpx;
  height: unset;
  background-color: #FFFFFF;
  border-radius: 32rpx;
  margin-left: 32rpx;
  margin-top: 24rpx;
  overflow: hidden;
}
.cell-arrow{
  margin-left: 16rpx;
}
.pop-block {
  width: 750rpx;
}
.title-block {
  width: 750rpx;
  height: 92rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.pop-title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #8A8A8F;
  font-weight: 400;
}
.type-block {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
}
.type-text {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #000000;
  text-align: center;
  font-weight: 400;
}
.week-block {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
.select-icon {
  position: absolute;
  top: 34rpx;
  right: 260rpx;
}
.week-item {
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.week-text{
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}
.pop-bottom-block {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cancel-text{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  font-weight: 400;
}
.pop-bottom-btn{
  width: 374rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.loop-block {
  width: 440rpx;
  font-size: 28rpx;
  color: #8A8A8F;
  position: absolute;
  right: 70rpx;
  top: 36rpx;
}